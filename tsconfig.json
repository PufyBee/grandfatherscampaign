{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "preserve",
    "strict": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "allowJs": true,
    "incremental": true,
    "skipLibCheck": true
  },
  "include": ["app", "components", "pages", "lib", "next-env.d.ts"]
}
